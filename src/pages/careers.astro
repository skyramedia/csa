---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Careers',
};
---

<Layout metadata={metadata}>
    <!-- HeroText Widget ******************* -->
  
    <HeroText
      tagline="Careers"
      title="Join our Team"
      subtitle=""
    />
  
    <!-- Pricing Widget ******************* -->
  
    <Prices
      title="Open Positions"
      subtitle="Interested in joining the CSA team? Explore open positions below!"
      prices={[
        {
          title: 'Junior Safety Engineer',
          subtitle: '',
          price: 10,
          period: 'period',
          items: [
            {
              description: 'Job Type: Engineering',
            },
            {
              description: 'Location: United States (Remote)',
            },
            {
              description: 'Full Time',
            },
            {
              description: 'Benefits',
            },
          ],
          callToAction: {
            target: '_blank',
            text: 'Learn More',
            href: '/junior/',
          },
          hasRibbon: true,
        },
        {
          title: 'Senior Safety Engineer',
          subtitle: '',
          price: 10,
          period: 'period',
          items: [
            {
              description: 'Job Type: Engineering',
            },
            {
              description: 'Location: United States (Remote)',
            },
            {
              description: 'Full Time',
            },
            {
              description: 'Benefits',
            },
          ],
          callToAction: {
            target: '_blank',
            text: 'Learn More',
            href: '/senior/',
          },
          hasRibbon: true,
        },
        {
          title: 'Principal Safety Engineer',
          subtitle: '',
          price: 10,
          period: 'period',
          items: [
            {
              description: 'Job Type: Engineering',
            },
            {
              description: 'Location: United States (Remote)',
            },
            {
              description: 'Full Time',
            },
            {
              description: 'Benefits',
            },
            
          ],
          callToAction: {
            target: '_blank',
            text: 'Learn More',
            href: '/principal/',
          },
          hasRibbon: true,
        },
        
      ]}
    />
    <Hero
    subtitle="Don't see what you're looking for? Feel free to contact us with your qualifications and resume!"
    actions={[
      {
        variant: 'primary',
        text: 'Apply now',
        href: '/application/',
        target: '_blank',
        icon: '',
      }
    ]}
    />
    </Layout>