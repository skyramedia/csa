---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";
interface Props {
  title: string;
  id: string;
  description: string;
  image: {
    src: ImageMetadata;
    alt: string;
  };
}

const { title, image, id, description } = Astro.props;
---

<article class="group bg-primary-800 border-primary-700 rounded-lg border p-6">
  <Picture
    src={image.src}
    class="block aspect-square w-full rounded-md object-cover group-hover:opacity-80"
    alt={image.alt}
    formats={["webp", "avif"]}
  />
  <h2
    class="text-primary-100 mt-3 block text-lg font-semibold group-hover:text-blue-500"
  >
    {title}
  </h2>
  <p class="text-primary-400 mt-1 block">{description}</p>
  <a
    class="text-primary-100 mt-3 inline-block cursor-pointer rounded-full bg-blue-600 px-6 py-2 text-center font-semibold before:absolute before:inset-0 hover:bg-blue-700"
    href={`/articles/${id}/`}
    class="before:absolute before:inset-0">Read more</a
  >
</article>
