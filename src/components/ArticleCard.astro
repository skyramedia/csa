---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";
interface Props {
  title: string;
  id: string;
  image: {
    src: ImageMetadata;
    alt: string;
  };
}

const { title, image, id } = Astro.props;
---

<article class="text-primary-100 group">
  <Picture
    src={image.src}
    class="aspect-square w-full rounded-md object-cover group-hover:opacity-80"
    alt={image.alt}
    formats={["webp", "avif"]}
  />
  <a
    href={`/articles/${id}/`}
    class="mt-4 block text-lg font-semibold before:absolute before:inset-0 hover:text-blue-600"
    >{title}</a
  >
</article>
