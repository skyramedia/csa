---
interface Props {
  date: Date;
  title: string;
  id: string;
  isFree: boolean;
}

const { date, title, id, isFree } = Astro.props;
---

<article class="group bg-primary-800 border-primary-700 rounded-lg border p-6">
  <div class="flex justify-between">
    <time class="text-primary-400 block tracking-wide uppercase"
    >{date.toLocaleDateString("en", { dateStyle: "medium" })}</time
  >
  <span class="bg-blue-800 border border-blue-700 px-3 uppercase py-0.5 rounded-full text-blue-100">{isFree ? "Free" : "Paid"}</span>
  </div>
  <h2
    class="text-primary-100 mt-2 block text-lg font-semibold group-hover:text-blue-500"
  >
    {title}
  </h2>
  <a
    class="text-primary-100 mt-3 inline-block cursor-pointer rounded-full bg-blue-600 px-6 py-2 text-center font-semibold before:absolute before:inset-0 hover:bg-blue-700"
    href={id}>Register</a
  >
</article>
